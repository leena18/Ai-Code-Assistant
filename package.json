{
  "name": "ai-chat",
  "displayName": "AI Chat",
  "version": "0.0.2",
  "description": "An AI chat interface inside VS Code",
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": [
    "onView:aiChat.chatPanel",
    "onCommand:aiChat.explainCode",
    "onCommand:aiChat.fixCode",
    "onCommand:aiChat.writeDocstrings",
    "onCommand:aiChat.generateTests",
    "onCommand:aiChat.exploreCodebase",
    "onCommand:aiChatbot.addComments",
    "onCommand:aiChatbot.fixCode",
    "onCommand:extension.removeComments"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiChat",
          "title": "AI Chat",
          "icon": "resources/chat-icon.svg"
        }
      ]
    },
    "views": {
      "aiChat": [
        {
          "id": "aiChat.chatPanel",
          "name": "AI Chat Panel",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "aiChatbot.fixCode",
          "when": "editorHasSelection"
        },
        {
          "command": "aiChatbot.addComments",
          "when": "editorHasSelection"
        },
        {
          "command": "extension.removeComments",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aiChatbot.nlpGenerateCode",
        "key": "alt+b",
        "when": "editorTextFocus"
      },
      {
        "command": "insertCodeSuggestion",
        "key": "tab",
        "when": "editorTextFocus"
      },
      {
        "command": "insertCodeSuggestion",
        "key": "tab",
        "when": "editorTextFocus"
    },
    {
      "command": "codeGenerator.acceptCode",
      "key": "ctrl+shift+a",
      "when": "editorTextFocus"
  },
  
  {
      "command": "codeGenerator.nextSuggestion",
      "key": "alt+]",
      "when": "editorTextFocus"
  },
  {
      "command": "codeGenerator.previousSuggestion",
      "key": "alt+[",
      "when": "editorTextFocus"
  },
  {
      "command": "codeGenerator.openSuggestionBox",
      "key": "alt+shift+s",
      "when": "editorTextFocus"
  }
    ],
    "commands": [
      {
        "command": "aiChat.explainCode",
        "title": "Explain Code"
      },
      {
        "command": "aiChat.fixCode",
        "title": "Fix Code"
      },
      {
        "command": "aiChatbot.fixCode",
        "title": "Fix using Lask.AI",
        "category": "AI Code Fix"
      },
      {
        "command": "aiChatbot.addComments",
        "title": "Add Comments using Lask.AI",
        "category": "AI Code Commenting"
      },
      {
        "command": "aiChat.writeDocstrings",
        "title": "Write Docstrings for Code"
      },
      {
        "command": "aiChat.generateTests",
        "title": "Generate Tests for Code"
      },
      {
        "command": "aiChat.exploreCodebase",
        "title": "Explore Codebase"
      },
      {
        "command": "extension.removeComments",
        "title": "Remove Comments from Selection"
      },
      {
        "command": "codeGenerator.acceptCode",
        "title": "Accept Code"
    },
    {
        "command": "codeGenerator.nextSuggestion",
        "title": "Next Suggestion"
    },
    {
        "command": "codeGenerator.previousSuggestion",
        "title": "Previous Suggestion"
    },
    {
        "command": "codeGenerator.openSuggestionBox",
        "title": "Open Suggestion Box"
    }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/highlight.js": "^10.1.0",
    "@types/marked": "^6.0.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "groq-sdk": "^0.7.0",
    "highlight.js": "^11.10.0",
    "marked": "^14.1.2",
    "vscode": "^1.1.37"
  }
}
