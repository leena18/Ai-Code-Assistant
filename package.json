{
  "name": "ai-chat",
  "displayName": "AI Chat",
  "version": "0.0.2",
  "description": "An AI chat interface inside VS Code",
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": [
    "onView:aiChat.chatPanel",
    "onCommand:aiChat.explainCode",
    "onCommand:aiChat.fixCode",
    "onCommand:aiChat.writeDocstrings",
    "onCommand:aiChat.generateTests",
    "onCommand:aiChat.exploreCodebase"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiChat",
          "title": "AI Chat",
          "icon": "resources/chat-icon.svg"
        }
      ]
    },
    "views": {
      "aiChat": [
        {
          "id": "aiChat.chatPanel",
          "name": "AI Chat Panel",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "aiChat.explainCode",
        "title": "Explain Code"
      },
      {
        "command": "aiChat.fixCode",
        "title": "Fix Code"
      },
      {
        "command": "aiChat.writeDocstrings",
        "title": "Write Docstrings"
      },
      {
        "command": "aiChat.generateTests",
        "title": "Generate Tests"
      },
      {
        "command": "aiChat.exploreCodebase",
        "title": "Explore Codebase"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^4.0.0",
    "@types/vscode": "^1.49.0"
  }
}
